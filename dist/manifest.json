{
    "manifest_version": 2,
    "name": "Quakes NZ",
    "version": "1.0",
    "description": "See the latest earthquake reports from GeoNet.",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "alarms",
        "storage"
    ],
    "background": {
        "scripts": [
            "js/background.bundle.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        },
        "default_title": "Quakes NZ",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}